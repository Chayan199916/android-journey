<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/start"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="134dp"
        android:layout_height="77dp"
        android:background="#ADD4F3"
        android:onClick="mainShow"
        android:text="@string/startButton"
        android:textSize="30sp"
        android:textStyle="bold"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="416dp"
        android:layout_height="414dp"
        android:layout_marginTop="112dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/second"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="40dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="234dp"
            android:background="#C5A5FD"
            android:onClick="tapPlay"
            android:tag="1"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/third"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginEnd="226dp"
            android:layout_marginRight="226dp"
            android:layout_marginBottom="154dp"
            android:background="#A4B1F8"
            android:onClick="tapPlay"
            android:tag="3"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="1"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/fourth"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="41dp"
            android:layout_marginRight="41dp"
            android:layout_marginBottom="154dp"
            android:background="#E999F6"
            android:onClick="tapPlay"
            android:tag="2"
            android:textSize="30sp"
            app:layout_column="1"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <Button
            android:id="@+id/first"
            style="@android:style/Widget.Holo.Button.Borderless"
            android:layout_width="150dp"
            android:layout_height="70dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="40dp"
            android:layout_marginLeft="40dp"
            android:layout_marginBottom="234dp"
            android:background="#F4AD96"
            android:onClick="tapPlay"
            android:tag="0"
            android:textSize="30sp"
            app:layout_column="0"
            app:layout_columnWeight="1"
            app:layout_gravity="fill"
            app:layout_row="0"
            app:layout_rowWeight="1" />

        <TextView
            android:id="@+id/counter"
            android:layout_width="82dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/first"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_marginStart="11dp"
            android:layout_marginLeft="11dp"
            android:layout_marginBottom="62dp"
            android:background="#EFA3BD"
            android:padding="6dp"
            android:textSize="24sp"
            app:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/ques"
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginStart="32dp"
            android:layout_marginLeft="32dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="99dp"
            android:layout_marginRight="99dp"
            android:layout_toEndOf="@+id/counter"
            android:layout_toRightOf="@+id/counter"
            android:background="#D5F8AC"
            android:padding="10dp"
            android:textSize="30sp"
            app:fontFamily="serif-monospace" />

        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/second"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginEnd="19dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="59dp"
            android:background="#C7F4F0"
            android:foregroundGravity="fill_horizontal"
            android:gravity="fill_horizontal"
            android:padding="10dp"
            android:textColor="#252323"
            android:textSize="24sp"
            android:textStyle="bold"
            android:typeface="sans"
            app:fontFamily="casual" />

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="87dp"
            android:layout_marginRight="87dp"
            android:layout_marginBottom="76dp"
            android:background="#FAF098"
            android:padding="5dp"
            android:textSize="24sp"
            android:textStyle="bold"
            app:fontFamily="serif-monospace" />

        <Button
            android:id="@+id/again"
            android:layout_width="147dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="124dp"
            android:layout_marginRight="124dp"
            android:layout_marginBottom="33dp"
            android:background="#F8CB89"
            android:onClick="startGame"
            android:text="Play again?"
            android:textColor="#6C0707"
            android:textSize="18sp"
            android:typeface="monospace" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>